<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <TextView
            android:id="@+id/planDetail_title_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="일정 제목"
            android:textColor="#444444"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="4dp">

            <ImageView
                android:id="@+id/plandetail_header_profile_pic"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/face" />

            <TextView
                android:id="@+id/plandetail_header_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="6dp"
                android:paddingTop="2dp"
                android:text="박보영"
                android:textColor="#444444"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="11dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="장소  | "
                android:textColor="#265570"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/plandetail_header_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="공학관"
                android:textColor="#a4a4a4"
                android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/plandetail_header_aboutScheduleTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="일정 설명"
            android:textColor="#265570"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/plandetail_header_aboutSchedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="DEFAULT"
            android:textColor="#444444"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="일정"
            android:textColor="#265570"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/plandetail_header_startToEndTime"
            android:layout_width="340dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="#f8f8f8"
            android:gravity="left"
            android:paddingLeft="4dp"
            android:paddingTop="10dp"
            android:text="4월 5일 금요일 오전 10:00 ~ 4월 6일 토요일 오전 10:00"
            android:textColor="#4a4a4a"
            android:textSize="14sp" />


    </LinearLayout>

    <View
        android:id="@+id/view7"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#f6f6f6" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:paddingLeft="3dp"
        android:text="댓글"
        android:textAllCaps="false"
        android:textColor="#4a4a4a"
        android:textSize="16sp"
        android:textStyle="bold" />

</LinearLayout>